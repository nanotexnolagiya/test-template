extends pug/base

append vars
    - title = 'О гостинице'
    - body.classList = ['inner-page']
block content
    - var defaultLink = 'javascript:void(0);'
    include pug/partials/header
    .i-container
        .i-main
            include pug/partials/page-title
            .inner-content.container
                include pug/partials/sidebar
                .content
                    .booking-form
                        form(action=defaultLink, method="post")
                            fieldset
                                .form-title Личные данные
                                .form-wrap-4
                                    .form-group
                                        input(type="text" id="name")
                                        label(for="name") Фамилия / имя
                                    .form-group
                                        input(type="text" id="citizenship")
                                        label(for="citizenship") Гражданство
                                    .form-group
                                        input(type="text" id="person" value="1")
                                        label(for="person") Взрослых: 
                                    .form-group
                                        input(type="text" id="children" value="0")
                                        label(for="children") Детей: 
                                .form-wrap-4
                                    .form-group
                                        input.datepicker.error(type="text" id="arrival")
                                        label(for="arrival") Дата заезда
                                    .form-group
                                        input.datepicker(type="text" id="departure")
                                        label(for="departure") Дата выезда
                                    .form-group
                                        input(type="text" id="room" value="1")
                                        label(for="room") номер
                            fieldset
                                .form-title Ваши контакты
                                .form-wrap-2
                                    .form-group
                                        input.error(type="email", id="email")
                                        label(for="email") Электронная почта
                                    .form-group
                                        input.error(type="text", id="phone")
                                        label(for="phone") Номер телефона
                            fieldset
                                .form-title Дополнительные сведения
                                .form-wrap
                                    .yes-no-switch
                                        label Встреча: 
                                        span.click-switch Нет
                                        span.switch
                                            input#more-switch(type='checkbox')
                                            label(for='more-switch')
                                        span.click-switch Да
                                #more-wrap
                                    .form-wrap
                                        .form-group
                                            input(type="text", id="city", placeholder="")
                                            label(for="city") Из какого города прибываете
                                        .form-group
                                            input(type="text", id="ticket", placeholder="")
                                            label(for="ticket") Авиакомпания / рейс, № поезда
                                    .form-wrap-2
                                        .form-group
                                            input(type="text", id="advent-date")
                                            label(for="advent-date") Дата прибытия
                                        .form-group
                                            input(type="text", id="advent-time")
                                            label(for="advent-time") Время прибытия
                            .message
                                .alert.alert-danger
                                    i.fa.fa-exclamation-triangle
                                    | Все поля обязательны для заполнения. Заполните выделенные поля
                            .form-wrap
                                #simple-captcha.visualCaptcha
                                    .visualCaptcha-possibilities
                                        .img
                                            a(href=defaultLink)
                                                img(src="images/icons/shirt.png", alt="")
                                        .img
                                            a(href=defaultLink)
                                                img(src="images/icons/headphone.png", alt="")
                                        .img
                                            a(href=defaultLink)
                                                img(src="images/icons/auto.png", alt="")
                                        .img
                                            a(href=defaultLink)
                                                img(src="images/icons/buggy.png", alt="")
                                        .img
                                            a(href=defaultLink)
                                                img(src="images/icons/coffee.png", alt="")
                                        .img
                                            a(href=defaultLink)
                                                img(src="images/icons/airplain.png", alt="")
                                    .visualCaptcha-explanation
                                        | Выберите&nbsp;
                                        span.active «наушники»
                                        | , чтобы подтвердить, что&nbsp;Вы не&nbsp;робот
                                .form-btn
                                    a.read-more(href=defaultLink)
                                        | подробнее
                                        span
                                            i.fa.fa-long-arrow-right

                    include pug/partials/footer
    .page-mask.mask-top
    .page-mask.mask-bottom
    include pug/partials/mobile-menu

